@charset "UTF-8";

.artistChWrapper {
	margin-left: 225px;
	margin-right: 225px;
	padding: 0;
    width: 80%;
    /* min-width: 1048px; */
    height: 80%;
}

.artistChWrapper p{
	font-size: 25px;
	font-family: 고딕체;
	padding-top: 60px; 
	padding-bottom: 20px;
	font-weight: bold;
	color: #000;
}

.artistChBox {
	width: 85%;
	height: 240px;
	border: 1px solid #555;
	border-top: 2px solid #555;
}

.leftSide {
	display: inline-block;
	width: 20%;
	padding: 25px;
}

.central {
	display: inline-block;
	width: 35%;
	vertical-align: top;
	padding: 25px;
}

.rightSide {
	display: inline-block;
	width: 30%;
	height: 80%;
	margin-top: 20px;
	vertical-align : top;
	border-left: 1px solid #555;
	background-color: pink;
}

.artistName {
	font-size: 20px;
	font-family: 고딕체;
	color: black;	
	font-weight: bold;
}

.inline {
	display: inline-block;
}

.leftMenu {
	margin-top: 30px;
	margin-right: 30px;
	color: gray;
}

.rightMenu {
	
}

.fan {
	width: 116px;
    height: 30px;
	background: url(/Melon/img/chart/artistChannel/btn_fan_b.png) 0 0px no-repeat;
	background-position: 0 0px;
}

.friendship {
	background: url(http://cdnimg.melon.co.kr/resource/image/web/artist/bg_intimacy.png) no-repeat 0 0;
}

/* .artistInfoCategories li {
	list-style: none;
} */

.artistInfoCategories {
	width: 85%;
	height: 40px;
	background-color: #ecffdd;
	color: #000;
	margin-top: 20px;
	border: 1px solid #ddd;
	border-top: 1px solid #555;
}

.artistInfoCategory {
	width: 101px;
	height: 30px;
	text-align: center;
	padding-top: 10px;
}

.artistInfoCategory a {
	color: #333;
	text-decoration: none;
}

.artistInfoCategory a:hover {
	text-decoration: underline;
}

.artistInfoContent p {
	font-size: 20px;
	border-bottom: 1px solid #ccc;
}

.artistInfoContent p span {
	font-size: 20px;
	color: green;
}

.facebook {
	margin-top: 20px;
	background: url(/Melon/img/chart/artistChannel/btn_sprite_sns.png) 0 0px no-repeat;
	/* background-position: 90 0px; */
	width: 28px;
    height: 28px;
}

.cyworld {
	background: url(/Melon/img/chart/artistChannel/btn_sprite_sns.png) -90px 0 no-repeat;
	/* background-position: -90px 0; */
	width: 28px;
    height: 28px;
}

.tweeter {
	background: url(/Melon/img/chart/artistChannel/btn_sprite_sns.png) -30px 0 no-repeat;
	/* background-position: -30 0px; */
	width: 28px;
    height: 28px;
}

.debutSong {
	vertical-align: top;
	margin-left: 100px;
}

.suggest_to_frineds {
	margin-top: 30px;
	background: url(/Melon/img/chart/artistChannel/bg_btn_sns_140822.png) 0px 0 no-repeat;
	width: 31px;
    height: 28px;
}